<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_favorite_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="요한복음 1:1"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="13dp">
                <TextView
                    android:id="@+id/text_favorite_mon_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:textColor="#212121" />
                <TextView
                    android:id="@+id/text_favorite_yr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/2017/"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textColor="#212121" />
                <TextView
                    android:id="@+id/text_favorite_mon_kr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textColor="#212121" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/image_favorite_selected"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/favorite_color"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginRight="15dp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>