<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="37dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/text_versemonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3월"
        android:textColor="#3C3F41"
        android:textSize="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/text_versenum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="①"
        android:layout_marginLeft="7dp"
        android:textSize="18dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/text_versetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요한복음1:1"
        android:layout_marginRight="3dp"
        android:textColor="#3C3F41"
        android:textSize="18dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KR"
                android:paddingBottom="2dp"
                android:layout_marginTop="-3dp"
                android:textSize="8dp"
                android:gravity="center"/>
            <CheckBox
                android:id="@+id/check_remember_kr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/my_chk"
                android:buttonTint="#3F51B5"
                android:layout_marginTop="-8dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:focusable="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EN"
                android:textSize="8dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="-3dp"
                android:gravity="center"/>
            <CheckBox
                android:id="@+id/check_remember_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/my_chk"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:buttonTint="#3F51B5"
                android:layout_marginTop="-8dp"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>